<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin shadow" }) do |f| %>
    <h2 class="form-signin-heading">Please login</h2>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder: 'Email Address'%>
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder: 'Password'%>
   
    <% if devise_mapping.rememberable? %>
      <div class="checkbox">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"btn bg-blue" %>
    </div>
    <p><%= render "devise/shared/links" %> </p> 
  <% end %>
</div>

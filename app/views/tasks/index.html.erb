<div class="container-fluid">
  <div class="pageHeader">
    <div class="title">Dashboard</div>
    <% if current_user.present? %>
      <div class="userPanel">
        <i class="">
          <%= button_to 'Logout', destroy_user_session_path, method: :delete, :class => 'text-danger' %>
          </i>
        <span class="username"><%= current_user.email%></span>
        <img src="https://s3.amazonaws.com/uifaces/faces/twitter/kolage/73.jpg" width="40" height="40">
      </div>
    <% end %>
  </div>

  <div class="main">
    <div class="nav">
      <div class="menu">
        <ul>
          <li><i class="fa fa-home"></i> Home</li>
          <li><i class="fa fa-signal"></i> Activity</li>
          <li class="active"><i class="fa fa-tasks"></i> Manage Tasks</li>
          <li><%= button_to destroy_user_session_path, method: :delete, class: 'btn btn-outline-danger' do %>
            <i class="fa fa-sign-out"></i> Logout
            <% end %></li>

        </ul>
      </div>
    </div>

    <div class="view">
      <div class="viewHeader">
        <div class="title">Manage Tasks</div>
        <div class="functions">
          <div class="button active">
            <%= link_to 'Add New Task', new_task_path, :class =>'text-white text-decoration-none' %>
             <button type="button" class="btn btn-primary edit-task-btn" data-bs-toggle="modal" data-bs-target="#newTaskModal">
                      <i class="fa fa-edit"></i> 
                    </button>

                    <%= render partial: 'new_modal', locals: { task: Task.new } %>
          </div>
        </div>
      </div>

      <div class="content">
        <div class="list">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Status</th>
                <th>Deadline</th>
                <th colspan="3">Actions</th>
              </tr>
            </thead>

            <tbody>
              <% @tasks.each do |task| %>
                <tr>
                  <td><%= task.title %></td>
                  <td><span class="bg-danger-light"><%= task.description %></span></td>
                  <td>
                    <span class="task-state-<%= task.state.downcase %>">
                      <%= task.state %>
                    </span>
                  </td>
                  <td><%= task.deadline.strftime('%Y-%m-%d %H:%M') %></td>
                  <td class="d-flex ">
                    <%= link_to task, class: 'btn btn-success' do %>
                      <i class="fa fa-eye"></i> 
                    <% end %>
      
                     <button type="button" class="btn btn-primary edit-task-btn" data-bs-toggle="modal" data-bs-target="#editTaskModal-<%= task.id %>">
                      <i class="fa fa-edit"></i> 
                    </button>

                    <%= render partial: 'edit_modal', locals: { task: task } %>



                    <%= button_to  task, method: :delete, class: 'btn btn-danger' do %>
                      <i class="fa fa-trash-o"></i>
                    <% end %>
                  </td>
                  <td><%= link_to "change state", @task %> </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>
</div>
